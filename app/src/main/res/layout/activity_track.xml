<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FBFBFB"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/logo_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:layout_weight="0.4"
                android:gravity="end">

                <EditText
                    android:id="@+id/searchBoxtrack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="Search here"
                    android:inputType="textPersonName"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnNotiftrack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:background="#FBFBFB"
                    android:src="@drawable/ic_notif" />

                <ImageButton
                    android:id="@+id/btnTracktrack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:background="#FBFBFB"
                    app:srcCompat="@drawable/ic_track" />
                <!--
                <ImageView
                    android:id="@+id/btnNotif"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:src="@drawable/ic_notif" />

                <ImageView
                    android:id="@+id/btnTrack"
                    android:layout_width="110sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:src="@drawable/ic_track" />
                 -->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorGray"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/overlock_bold"
                    android:layout_gravity="center_vertical"
                    android:text="Tracking System"
                    android:textColor="@android:color/black"
                    android:textSize="22sp" />

                <Button
                    android:layout_width="100sp"
                    android:layout_height="28sp"
                    android:layout_gravity="end|center_vertical"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/colorNegative"
                    android:text="Back"
                    android:textColor="@color/colorGray"
                    android:textAllCaps="false"
                    android:fontFamily="@font/overlock_bold"
                    android:textSize="16sp"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingHorizontal="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Transaction ID:"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="TR001"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>